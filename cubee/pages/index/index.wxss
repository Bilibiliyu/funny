/**index.wxss**/
.stage{
  text-align: center;
  perspective: 400px;
}
.container{
}
.head{
  position: relative;
  width: 120rpx;
  height:120rpx;
  margin: 0 auto;
  background: #000;
  transform-style: preserve-3d;
}
.face{
  position: absolute;
  top:0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
}
.left{
  background: #A09;
  transform: translateX(-30px) rotateY(-90deg);
}
.right{
  background: #03C;
  transform: translateX(30px) rotateY(90deg);
}
.top{
  background: #09C;
  transform: translateY(-30px) rotateX(90deg);
}
.bottom{
  background: #09C;
  transform: translateY(30px) rotateX(90deg);
}
.back{
  background: #3A9;
  transform: translateZ(-30px);
}
.front {
  transform: translateZ(30px);
}